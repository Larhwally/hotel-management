@page
@model HotelApp.Pages.HotelPages.CreateModel
@{
}
<br />
<h2 class="text-info">Add New Room</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label>Room Number</label>
            </div>
            <div class="col-9">
                <input asp-for="room.roomNumber" class="form-control" />
            </div>
            <span asp-validation-for="room.roomNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Room Status</label>
            </div>
            <div class="col-9">
                <select asp-for="room.roomStatus" class="form-control">
                    <option>Select room status</option>
                    <option>Available</option>
                    <option>Booked</option>
                </select>
                @*<input asp-for="room.roomStatus" class="form-control" />*@
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>