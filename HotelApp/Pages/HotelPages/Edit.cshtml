@page
@model HotelApp.Pages.HotelPages.EditModel
@{
}

<br />
<h2 class="text-info">Book Room</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="room.itbId" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label>Room Number</label>
            </div>
            <div class="col-6">
                <input asp-for="room.roomNumber" class="form-control" />
            </div>
            <span asp-validation-for="room.roomNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Room Status</label>
            </div>
            <div class="col-6">
                <select asp-for="room.roomStatus" class="form-control">
                    <option>Select room status</option>
                    <option>Available</option>
                    <option>Booked</option>
                </select>
            </div>
            <span asp-validation-for="room.roomStatus" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Book Room" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>